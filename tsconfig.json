{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es6", "es2017", "esnext"],
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    // TODO once react 18 types are in @types/react, "node", "react/next", "react-dom/next" field can be removed and tslibs library removed from npm dependencies
    "types": ["jest", "node", "react/next", "react-dom/next"]
  },
  "include": ["src/index.tsx"],
  "exclude": ["node_modules", "tests", "dist"]
}
